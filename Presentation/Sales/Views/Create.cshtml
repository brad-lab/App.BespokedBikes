@model App.BespokedBikes.Presentation.Sales.Models.CreateSaleViewModel

@{
    ViewBag.Title = "Create Sale";
}

<h2>Create Sale</h2>

@using (Html.BeginForm("create", "sales", FormMethod.Post))
{
    <form class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label class="control-label">Date</label>
            @Html.TextBoxFor(p => p.Sale.Date, "{0:MM-dd-yyyy}", new { type = "date", @class = "form-control" })
            @Html.ValidationMessageFor(p => p.Sale.Date, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label class="control-label">Customer</label>
            @Html.DropDownListFor(p => p.Sale.CustomerId, Model.Customers, "Please Select", new { @class="form-control" })
            @Html.ValidationMessageFor(p => p.Sale.CustomerId, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label class="control-label">Salesperson</label>
            @Html.DropDownListFor(p => p.Sale.EmployeeId, Model.Employees, "Please Select", new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.Sale.EmployeeId, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">    
            <label class="control-label">Product</label>
            @Html.DropDownListFor(p => p.Sale.ProductId, Model.Products, "Please Select", new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.Sale.ProductId, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label class="control-label">Quantity</label>
            @Html.TextBoxFor(p => p.Sale.Quantity, new { @class = "form-control" })
            @Html.ValidationMessageFor(p => p.Sale.Quantity, "", new { @class = "text-danger" })
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
        <a class="btn btn-secondary" href="@Url.Action("Index", "Sales")" style="margin-left:0.5rem;">Cancel</a>
    </form>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
